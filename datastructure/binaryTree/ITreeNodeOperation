/**
 * @Description: Tree operation definition
 * @version V1.0.0
 */
public interface ITreeNodeOperation {

	/**
	 * Create tree
	 * 
	 * @param datas
	 * @return
	 */
	List<BinaryTreeNode> createTree(Integer[] datas);

	/**
	 * Preorder traversal, recursion: root, left, right order
	 * 
	 * @param root
	 */
	void preOrder(BinaryTreeNode root);

	/**
	 * Middle order traversal, recursion: left, root, right order
	 * 
	 * @param root
	 */
	void midOrder(BinaryTreeNode root);

	/**
	 * Back order recursion, recursion: left, right, root
	 * 
	 * @param root
	 */
	void postOrder(BinaryTreeNode root);

}
