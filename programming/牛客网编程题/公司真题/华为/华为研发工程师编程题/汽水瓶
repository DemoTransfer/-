import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		algorithmicImpl();
	}

	@SuppressWarnings("resource")
	public static void algorithmicImpl() {
		int i = 0;

		Scanner scanner = new Scanner(System.in);
		while (scanner.hasNextInt()) {
			if (i >= 10) {
				System.exit(0);
			}
			i++;

			int nextInt = scanner.nextInt();
			if (nextInt == 0) {
				System.exit(0);
			}

			if (nextInt < 0 || nextInt > 100) {
				continue;
			}

			if (nextInt == 1 || nextInt == 2) {
				System.out.println(calculateBasicNum(nextInt));
			} else {
				System.out.println(recursion(nextInt, 0));
			}
		}
	}

	public static int recursion(int n, int totalCanDrinkNum) {
		int alreadyDrinkNum = n / 3;
		totalCanDrinkNum = totalCanDrinkNum + alreadyDrinkNum;

		int residueDrinkNum = alreadyDrinkNum + n % 3;
		if (residueDrinkNum == 1) {
			return totalCanDrinkNum;
		} else if (residueDrinkNum == 2) {
			return totalCanDrinkNum + 1;
		} else {
			return recursion(residueDrinkNum, totalCanDrinkNum);
		}
	}

	public static int calculateBasicNum(int n) {
		if (n == 1) {
			return 0;
		}
		if (n == 2) {
			return 1;
		}
		return n;
	}
  
}
